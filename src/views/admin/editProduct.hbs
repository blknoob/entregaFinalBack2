<h2>Editar Producto</h2>

{{#if product}}
  <div style="margin-bottom:2rem;">
    <strong>Título actual:</strong> {{product.title}}<br>
    <strong>Descripción:</strong> {{product.description}}<br>
    <strong>Categoría:</strong> {{product.category}}<br>
    <strong>Código:</strong> {{product.code}}<br>
    <strong>Precio:</strong> ${{product.price}}<br>
    <strong>Stock:</strong> {{product.stock}}<br>
  </div>

  <form action="/admin/products/edit/{{product._id}}" method="POST" style="margin-bottom:2rem;">
    <label for="title"><strong>Título:</strong></label>
    <input type="text" id="title" name="title" value="{{product.title}}" required style="margin-right:1rem;">
    <label for="description"><strong>Descripción:</strong></label>
    <input type="text" id="description" name="description" value="{{product.description}}" required style="margin-right:1rem;">
    <label for="category"><strong>Categoría:</strong></label>
    <input type="text" id="category" name="category" value="{{product.category}}" required style="margin-right:1rem;">
    <label for="code"><strong>Código:</strong></label>
    <input type="text" id="code" name="code" value="{{product.code}}" required style="margin-right:1rem;">
    <label for="price"><strong>Precio:</strong></label>
    <input type="number" id="price" name="price" step="0.01" min="0" value="{{product.price}}" required style="margin-right:1rem; width:80px;">
    <label for="stock"><strong>Stock:</strong></label>
    <input type="number" id="stock" name="stock" min="0" value="{{product.stock}}" required style="margin-right:1rem; width:60px;">
    <button type="submit" style="font-weight:bold;">Guardar Cambios</button>
  </form>
{{else}}
  <p>Producto no encontrado.</p>
{{/if}}
